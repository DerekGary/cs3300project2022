<head>
  <%= render "general/boot-header" %>
</head>
<%= render "general/navbar" %>

<p style="color: green"><%= notice %></p>

<body class="bg-dark text-light">
  <div class="modal position-static d-block py-5" tabindex="-1">
  <div class="modal-dialog">
      <div class="modal-content rounded-1 bg-secondary">
        <div class="modal-header p-4 pb-4">
          <h3 class="modal-title">Project View</h3>
        </div>
        <div class="modal-body p-5 pt-4">
          <%= render @project %>
        </div>
        <div class="modal-footer">
          <%= link_to "Back to projects", projects_path, class: "btn btn-dark" %>
          <% if user_signed_in? %>
            <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-dark" %>
            <%= button_to "Destroy this project", @project, method: :delete, class: "btn btn-danger" %>
          <% end %>
        </div>
    </div>
  </div>
  <div>
  </div>
</body>