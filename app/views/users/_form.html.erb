<head>
<%= render "general/boot-header" %>
</head>
<%= render "general/navbar"%>
<body class="bg-dark">
    <div class="modal modal-signin position-static d-block py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-1 bg-secondary">
        <div class="modal-header p-5 pb-4 border-bottom-0 d-block text-center">
            <h2 class="text-light"><%= title %></h2>
        </div>
        <div class="modal-body p-5 pt-0 text-center">
            <%= yield %>
        </div>
        <div class="modal-footer ps-5 d-grid d-md-block mt-3">
        <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
          <%= title %>
        <% end %>
        <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  </body>